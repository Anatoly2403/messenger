{
  "include": ["src/**/*", "types/index.d.ts", "node_modules/@types", "test/router.spec.ts"],
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "typeRoots": ["node_modules/@types", "types/index.d.ts", "node_modules/handlebars/types/index.d.ts"],
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "experimentalDecorators": true
  }
}
